@model IEnumerable<Cafe.Models.cafeRecord>

@{
    ViewBag.Title = "Index";
}

<h2>CAFE CUSTOMER RECORD</h2>

<p>
    @Html.ActionLink("Create New", "Create",null, new {@class="btn btn-primary"})
</p>
<table class="table table-responsive table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Food_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C_Payment_method)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Waited_By)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.C_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Food_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quantity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.C_Payment_method)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Waited_By)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
